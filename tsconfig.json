{
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "module": "CommonJS",
        "target": "ES6",
        "outDir": "dist",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["**/*.spec.ts"]
}